@*
    @model List<ObjetoEscuelaBase>
*@

<div class="form-group" style="margin-left: 3%;">
    <a asp-controller=@ViewBag.Controller
       asp-action="Create"
       class="btn btn-success">
        Agregar
    </a>
</div>


<table class="table table-dark table-hover">
    <thead>
        <tr>

            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Opciones</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Nombre</td>
                <td>
                    <a asp-controller=@ViewBag.Controller
                       asp-action="Edit"
                       asp-route-id=@obj.Id
                       class="btn btn-info">
                        Editar
                    </a>


                    <button type="button" class="btn btn-danger" onclick="showModal('@obj.Id')">Eliminar</button>

                    <div class="modal fade" id="modalDelete@{@obj.Id}" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-scrollable" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" style="color: black;" >Eliminar Curso</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body" style="color: black;">
                                    Esta seguro que desea eliminar este curso ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                    <a asp-controller=@ViewBag.Controller
                                       asp-action="Delete"
                                       asp-route-id=@obj.Id
                                       class="btn btn-primary">
                                        Si
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>


                </td>
            </tr>
        }
    </tbody>
</table>





